@{
    ViewData["Title"] = "CS50 Cheatsheets";
<body>
    <div>
        <img src="\images\cheatsheets.png" alt="CS50 Cheatsheets" height="100" width=1000>
    </div>

    <h4> Study and help your peers by uploading the most important and useful notes for each CS50 quiz! </h4>

    <div>
        <h2> QUIZ 0 </h2>
        Submit your notes here for Quiz 0
    </div>


    @model List<Final_Project.Models.QuizNote>
